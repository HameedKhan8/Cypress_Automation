{
  "name": "testauto",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {

    "cypress:run:prod": "cypress run --browser chrome --config-file cypress/config/prod.json",
    "cypress:open:prod": "cypress open --config-file cypress/config/prod.json",

    "cypress:run:dev": "cypress run --browser chrome --config-file cypress/config/develop.json",
    "cypress:open:dev": "cypress open --config-file cypress/config/develop.json",

    "cypress:run:test": "cypress run --browser chrome --config-file cypress/config/test.json",
    "cypress:open:test": "cypress open --config-file cypress/config/test.json",
    
    "cy:open": "cypress open",
    "clean:reports": "rmdir /S /Q cypress\\reports && mkdir cypress\\reports && mkdir cypress\\reports\\mochareports",
    "pretest": "npm run clean:reports",
    "scripts": "cypress run",
    "combine-reports": "mochawesome-mergecypress/reports/mocha/*.json > cypress/reports/mochareports/report.json",
    "generate-report": "marge cypress/reports/mochareports/report.json -f report -o cypress/reports/mochareports",
    "posttest": "npm run combine-reports && npm run generate-report",
    "test": "npm run scripts || npm run posttest"
  },
  "keywords": [],
  "author": "Hameed khan",
  "license": "ISC",
  "dependencies": {
    "cypress": "^9.6.1"
  },
  "devDependencies": {
    "cypress-cucumber-preprocessor": "^4.3.1",
    "cypress-multi-reporters": "^1.6.0",
    "cypress-xpath": "^1.6.2",
    "mocha": "^10.0.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.2.1",
    "mochawesome-report-generator": "^6.2.0"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true
  }
}
